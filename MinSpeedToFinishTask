#include <stdio.h>

int canFinish(int tasks[], int n, int H, int k) {
    int hours = 0;
    for (int i = 0; i < n; i++) {
        hours += (tasks[i] + k - 1) / k; // ceil division
    }
    return hours <= H;
}

int minSpeed(int tasks[], int n, int H) {
    int low = 1, high = 0, ans;

    for (int i = 0; i < n; i++)
        if (tasks[i] > high)
            high = tasks[i];

    while (low <= high) {
        int mid = (low + high) / 2;
        if (canFinish(tasks, n, H, mid)) {
            ans = mid;
            high = mid - 1;
        } else {
            low = mid + 1;
        }
    }
    return ans;
}

int main() {
    int tasks[] = {3, 6, 7, 11};
    int H = 8;
    int n = sizeof(tasks) / sizeof(tasks[0]);

    printf("Minimum speed: %d\n", minSpeed(tasks, n, H));
    return 0;
}
